<Window x:Class="Sample.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Title="Window1" Height="352" Width="677">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <!--<RepeatButton DockPanel.Dock="Top" Name="scrollUpButton" Click="scrollUpButton_Click">Scroll Up</RepeatButton>
        <RepeatButton DockPanel.Dock="Bottom" Name="scrollDownButton" Click="scrollDownButton_Click">Scroll Down</RepeatButton>-->
        <dxg:GridControl Grid.Column="0" x:Name="grid">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" IsDeferredScrolling="False" ScrollViewer.ScrollChanged="view_ScrollChanged" />
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Text" />
                <dxg:GridColumn FieldName="Number" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>
        <ListBox Grid.Column="2" x:Name="listBox"></ListBox>
        <Button Grid.Column="1" Content="Get visible rows" Name="button1" VerticalAlignment="Center" Click="button1_Click" />
    </Grid>
</Window>
